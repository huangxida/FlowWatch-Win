<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:FlowWatch.Helpers">

    <!-- ===== Converters ===== -->
    <helpers:RatioToWidthConverter x:Key="RatioToWidthConverter"/>

    <!-- ===== Brushes ===== -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFF7F7F7"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#FFE8E8E8"/>
    <SolidColorBrush x:Key="TextBrush" Color="#FF1A1A1A"/>
    <SolidColorBrush x:Key="HintBrush" Color="#FF999999"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FF555555"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#FFEEEEEE"/>
    <SolidColorBrush x:Key="ButtonBrush" Color="#FF1A1A1A"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FF333333"/>

    <!-- ===== Window ===== -->
    <Style x:Key="SettingsWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI, Microsoft YaHei"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- ===== Typography ===== -->
    <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <Style x:Key="HintStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource HintBrush}"/>
        <Setter Property="FontSize" Value="11.5"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
        <Setter Property="LineHeight" Value="17"/>
    </Style>

    <Style x:Key="ValueStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontFamily" Value="Consolas, Segoe UI"/>
    </Style>

    <!-- ===== TextBox ===== -->
    <Style x:Key="SettingsTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,7"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== ComboBox ===== -->
    <Style x:Key="SettingsComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- ===== Toggle Switch (CheckBox) ===== -->
    <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Width="40" Height="22" Cursor="Hand">
                        <Border x:Name="Track" CornerRadius="11"
                                Background="#FFDDDDDD" BorderThickness="0"/>
                        <Border x:Name="Thumb" Width="16" Height="16" CornerRadius="8"
                                Background="#FFFFFFFF" HorizontalAlignment="Left" Margin="3,0,0,0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Track" Property="Background" Value="#FF1A1A1A"/>
                            <Setter TargetName="Thumb" Property="Background" Value="#FFFFFFFF"/>
                            <Setter TargetName="Thumb" Property="Margin" Value="21,0,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Slider ===== -->
    <Style x:Key="SliderThumbStyle" TargetType="Thumb">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Ellipse Fill="#FF1A1A1A" Width="14" Height="14"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SettingsSliderStyle" TargetType="Slider">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Border Height="3" CornerRadius="1.5" Background="#FFDDDDDD"
                                VerticalAlignment="Center"/>
                        <Track x:Name="PART_Track">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource SliderThumbStyle}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Button ===== -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBrush}"/>
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="20,9"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Secondary (outline) Button ===== -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="20,9"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#FFF5F5F5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Divider ===== -->
    <Style x:Key="DividerStyle" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource DividerBrush}"/>
        <Setter Property="Margin" Value="0,6,0,6"/>
    </Style>

    <!-- ===== Range Tab (RadioButton) ===== -->
    <Style x:Key="RangeTabStyle" TargetType="RadioButton">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Bd" Background="Transparent"
                            BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="1"
                            CornerRadius="6" Padding="16,7" SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ButtonBrush}"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource ButtonBrush}"/>
                            <Setter Property="Foreground" Value="#FFFFFFFF"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#FFF5F5F5"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

</ResourceDictionary>
