<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Tray Menu -->
    <sys:String x:Key="Tray.Tooltip">FlowWatch 网速监控</sys:String>
    <sys:String x:Key="Tray.Settings">设置</sys:String>
    <sys:String x:Key="Tray.Statistics">流量统计</sys:String>
    <sys:String x:Key="Tray.AppTraffic">应用流量</sys:String>
    <sys:String x:Key="Tray.AutoHide">自动隐藏</sys:String>
    <sys:String x:Key="Tray.LockOnTop">置顶</sys:String>
    <sys:String x:Key="Tray.Exit">退出</sys:String>

    <!-- Common Messages -->
    <sys:String x:Key="Common.AlreadyRunning">FlowWatch 已在运行中。</sys:String>
    <sys:String x:Key="Common.StartupFailed">启动失败: {0}</sys:String>

    <!-- Settings Window -->
    <sys:String x:Key="Settings.WindowTitle">FlowWatch 设置</sys:String>
    <sys:String x:Key="Settings.Header">设置</sys:String>
    <sys:String x:Key="Settings.General">常规</sys:String>
    <sys:String x:Key="Settings.Language">语言</sys:String>
    <sys:String x:Key="Settings.LanguageAuto">跟随系统</sys:String>
    <sys:String x:Key="Settings.RefreshRate">刷新频率</sys:String>
    <sys:String x:Key="Settings.RefreshRateHint">数据更新间隔，越小越实时</sys:String>
    <sys:String x:Key="Settings.AutoLaunch">开机自启</sys:String>
    <sys:String x:Key="Settings.AutoLaunchHint">登录系统时自动运行</sys:String>
    <sys:String x:Key="Settings.Window">窗口</sys:String>
    <sys:String x:Key="Settings.LockOnTop">锁定置顶</sys:String>
    <sys:String x:Key="Settings.LockOnTopHint">置顶并穿透点击，解锁后可拖动</sys:String>
    <sys:String x:Key="Settings.AutoHide">自动隐藏</sys:String>
    <sys:String x:Key="Settings.AutoHideHint">鼠标悬停显示，移开后自动隐藏</sys:String>
    <sys:String x:Key="Settings.Layout">布局方向</sys:String>
    <sys:String x:Key="Settings.LayoutHorizontal">水平</sys:String>
    <sys:String x:Key="Settings.LayoutVertical">垂直</sys:String>
    <sys:String x:Key="Settings.DisplayMode">显示模式</sys:String>
    <sys:String x:Key="Settings.DisplaySpeed">速率</sys:String>
    <sys:String x:Key="Settings.DisplayUsage">流量</sys:String>
    <sys:String x:Key="Settings.DisplayBoth">速率+流量</sys:String>
    <sys:String x:Key="Settings.SmoothTransition">平滑过渡</sys:String>
    <sys:String x:Key="Settings.SmoothTransitionHint">速率和流量变化时使用平滑动画过渡</sys:String>
    <sys:String x:Key="Settings.Appearance">外观</sys:String>
    <sys:String x:Key="Settings.Font">字体</sys:String>
    <sys:String x:Key="Settings.FontPreset">预设字体...</sys:String>
    <sys:String x:Key="Settings.FontSize">字号</sys:String>
    <sys:String x:Key="Settings.ColorMax">颜色上限</sys:String>
    <sys:String x:Key="Settings.ColorMaxHint">速率从白到红渐变的阈值</sys:String>
    <sys:String x:Key="Settings.TrafficStats">流量统计</sys:String>
    <sys:String x:Key="Settings.ResetHint">重置后不可恢复，请谨慎操作</sys:String>
    <sys:String x:Key="Settings.ResetToday">重置当日</sys:String>
    <sys:String x:Key="Settings.ResetTodayConfirm">确定要重置今天的流量统计吗？</sys:String>
    <sys:String x:Key="Settings.ResetAll">重置全部</sys:String>
    <sys:String x:Key="Settings.ResetAllConfirm">确定要重置所有流量历史记录吗？此操作不可恢复。</sys:String>

    <!-- Update -->
    <sys:String x:Key="Tray.CheckUpdate">检查更新</sys:String>
    <sys:String x:Key="Update.WindowTitle">FlowWatch 更新</sys:String>
    <sys:String x:Key="Update.Header">发现新版本</sys:String>
    <sys:String x:Key="Update.CurrentVersion">当前版本：</sys:String>
    <sys:String x:Key="Update.LatestVersion">最新版本：</sys:String>
    <sys:String x:Key="Update.PublishedAt">发布时间：</sys:String>
    <sys:String x:Key="Update.ReleaseNotes">更新说明</sys:String>
    <sys:String x:Key="Update.NoNotes">暂无更新说明。</sys:String>
    <sys:String x:Key="Update.SkipVersion">跳过此版本</sys:String>
    <sys:String x:Key="Update.Later">稍后提醒</sys:String>
    <sys:String x:Key="Update.UpdateNow">立即更新</sys:String>
    <sys:String x:Key="Update.Downloading">下载中...</sys:String>
    <sys:String x:Key="Update.DownloadFailed">下载失败，请稍后重试或前往 GitHub 手动下载。</sys:String>
    <sys:String x:Key="Update.AlreadyLatest">当前已是最新版本 ({0})。</sys:String>
    <sys:String x:Key="Update.CheckFailed">检查更新失败，请检查网络连接。</sys:String>
    <sys:String x:Key="Update.Checking">检查中...</sys:String>
    <sys:String x:Key="Update.BalloonTitle">发现新版本</sys:String>
    <sys:String x:Key="Update.BalloonText">FlowWatch {0} 已发布，点击查看详情。</sys:String>
    <sys:String x:Key="Settings.AutoCheckUpdate">自动检查更新</sys:String>
    <sys:String x:Key="Settings.AutoCheckUpdateHint">每 24 小时自动检查一次新版本</sys:String>
    <sys:String x:Key="Settings.CurrentVersionLabel">当前版本：</sys:String>
    <sys:String x:Key="Settings.SkippedVersionLabel">已跳过版本：</sys:String>
    <sys:String x:Key="Settings.ClearSkip">取消跳过</sys:String>

    <!-- About -->
    <sys:String x:Key="Tray.About">关于</sys:String>
    <sys:String x:Key="About.WindowTitle">关于 FlowWatch</sys:String>
    <sys:String x:Key="About.Description">轻量级网速监控悬浮窗工具</sys:String>
    <sys:String x:Key="About.VersionFormat">版本 {0}</sys:String>
    <sys:String x:Key="About.GitHubRepo">GitHub 仓库</sys:String>
    <sys:String x:Key="About.Close">关闭</sys:String>

    <!-- Statistics Window -->
    <sys:String x:Key="Stats.WindowTitle">FlowWatch 流量统计</sys:String>
    <sys:String x:Key="Stats.Header">流量统计</sys:String>
    <sys:String x:Key="Stats.Day">日</sys:String>
    <sys:String x:Key="Stats.Week">周</sys:String>
    <sys:String x:Key="Stats.Month">月</sys:String>
    <sys:String x:Key="Stats.Summary">汇总</sys:String>
    <sys:String x:Key="Stats.TotalDownload" xml:space="preserve"> 总下载</sys:String>
    <sys:String x:Key="Stats.TotalUpload" xml:space="preserve"> 总上传</sys:String>
    <sys:String x:Key="Stats.DailyDetail">每日明细</sys:String>
    <sys:String x:Key="Stats.PeriodToday">今天</sys:String>
    <sys:String x:Key="Stats.PeriodWeek">本周 {0} - {1}</sys:String>
    <sys:String x:Key="Stats.PeriodMonth">{0}年{1}月</sys:String>

    <!-- App Traffic Window -->
    <sys:String x:Key="AppTraffic.WindowTitle">FlowWatch 应用流量</sys:String>
    <sys:String x:Key="AppTraffic.Header">应用流量</sys:String>
    <sys:String x:Key="AppTraffic.Realtime">实时</sys:String>
    <sys:String x:Key="AppTraffic.Day">日</sys:String>
    <sys:String x:Key="AppTraffic.Week">周</sys:String>
    <sys:String x:Key="AppTraffic.Month">月</sys:String>
    <sys:String x:Key="AppTraffic.Summary">汇总</sys:String>
    <sys:String x:Key="AppTraffic.TotalDownload" xml:space="preserve"> 总下载</sys:String>
    <sys:String x:Key="AppTraffic.TotalUpload" xml:space="preserve"> 总上传</sys:String>
    <sys:String x:Key="AppTraffic.AppDetail">应用明细</sys:String>
    <sys:String x:Key="AppTraffic.PeriodRealtime">实时速度</sys:String>
    <sys:String x:Key="AppTraffic.PeriodToday">今天</sys:String>
    <sys:String x:Key="AppTraffic.PeriodWeek">本周 {0} - {1}</sys:String>
    <sys:String x:Key="AppTraffic.PeriodMonth">{0}年{1}月</sys:String>

</ResourceDictionary>
