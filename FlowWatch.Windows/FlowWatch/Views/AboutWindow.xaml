<Window x:Class="FlowWatch.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource About.WindowTitle}"
        Width="360" SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource SettingsWindowStyle}"
        ShowInTaskbar="True">

    <StackPanel Margin="32,28,32,28">

        <!-- App icon and name -->
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="/Resources/generated_icon.png" Width="64" Height="64"
                   HorizontalAlignment="Center" Margin="0,0,0,12"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            <TextBlock Text="FlowWatch" FontSize="22" FontWeight="SemiBold"
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText" FontSize="13"
                       Foreground="{StaticResource HintBrush}"
                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Info card -->
        <Border Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1"
                CornerRadius="8" Padding="16,12" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Style="{StaticResource HintStyle}"
                           Text="{DynamicResource About.Description}"
                           TextAlignment="Center" Margin="0,4,0,8"/>
                <Border Style="{StaticResource DividerStyle}"/>
                <Button x:Name="GitHubButton" Cursor="Hand" Click="OnGitHubClick"
                        HorizontalAlignment="Center" Margin="0,6,0,4">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock x:Name="LinkText"
                                       Text="{DynamicResource About.GitHubRepo}"
                                       Foreground="#FF4A90D9" FontSize="13"
                                       TextDecorations="Underline"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="LinkText" Property="Foreground" Value="#FF2B6CB0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <!-- Close button -->
        <Button Content="{DynamicResource About.Close}"
                Style="{StaticResource SecondaryButtonStyle}"
                HorizontalAlignment="Stretch"
                Click="OnCloseClick"/>

    </StackPanel>
</Window>
